@page "/Products/{productId:int}"
@inject IRepositoryWrapper _repo 

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img class="img-fluid img-responsive rounded product-image" src="@productToDisplay.ImgUrl"/>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-4 bg-light rounded mx-md-auto">
            <div class="row">
                <h3>@productToDisplay.ProductName</h3>
            </div>
            <div class="row">
                <div class="ratings mr-2"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
            </div>
            <div class="row">
                <h5>$@productToDisplay.Price</h5>
            </div>
            <div class="row">
                <p>@productToDisplay.ShortDesc</p>
            </div>
        </div>
        <div class="col-md-2">

        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ProductId { get; set; }
    private Product productToDisplay;

    protected override async Task OnInitializedAsync()
    {
        productToDisplay = await _repo.Product.GetProductById(ProductId);
    }
}

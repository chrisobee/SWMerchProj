<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">SWMerchUI</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="far fas fa-home fa-2x fa-pull-left" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Products/AllProducts">
                <span class="far fas fa-list fa-2x fa-pull-left" aria-hidden="true"></span> All Products
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Admin/AddProduct">
                <span class="far fas fa-gift fa-2x fa-pull-left" aria-hidden="true"></span> Add New Product
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Card/AddCard">
                <span class="far fa-credit-card fa-2x fa-pull-left" aria-hidden="true"></span> Add New Card
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="Address/AddAddress">
                <span class="far fa-address-card fa-2x fa-pull-left" aria-hidden="true"></span>   Add New Address
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
